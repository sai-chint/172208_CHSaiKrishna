<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
  
  <bean id="studentBean " class="com.spring.demo.Student">
   
   <property name="studentName" value="Sai Krishna"></property> 
   <property name="studentId" value="172208"></property> 
   <property name="studentAge" value="22"></property> 
  
  </bean>
  
  <bean id="studentBean1 " class="com.spring.demo.Student">
   
   <constructor-arg value="Sai Krishna" /> 
   <constructor-arg value="172208" /> 
   <constructor-arg value="22" /> 
  
  </bean>
  
  <bean id="studentBean2 " class="com.spring.demo.Student">
   
   <constructor-arg value="Sai Krishna" /> 
   <constructor-arg type="int" value="172208" /> 
   <constructor-arg type="int" value="22" /> 
  
  </bean>
  
  <bean id="studentBean3 " class="com.spring.demo.Student"> 
   <constructor-arg index="0" value="Sai Krishna" /> 
   <constructor-arg index="1" value="172208" /> 
   <constructor-arg index="2" value="22" /> 
   
  </bean>
  </beans>